<%= form_for @person do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :hair_color %>
  <%= f.text_field :hair_color %>

  <%= f.label :eye_color %>
  <%= f.text_field :eye_color %>

  <%= f.label :age%>
  <%= f.number_field :age%>

  <%= f.label :gender%>
  <%= f.collection_select :gender, Person::GENDERS, :to_s, :to_s, :include_blank => true %>

  <%= f.label :alive%>
  <%= f.check_box :alive %>

  <%= f.submit "Submit" %>
<% end %>
