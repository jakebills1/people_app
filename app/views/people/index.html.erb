<h1>All People</h1>
<h2>Here are all the people in the database</h2>

<% @people.each do |person|%>
    <h3><%=person.name%></h3>
    <%= link_to 'View Info', person_path(person) %>
    <%= link_to 'Edit', edit_person_path(person) %>
    <%= link_to 'Destroy Person', person, method: :delete %>

<%end%>

<%= link_to 'Add a new person', new_person_path %>